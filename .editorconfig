# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Stylesheets
[*.{css,scss}]
indent_style = space
indent_size = 4

# HTML
[*.{htm,html}]
indent_style = space
indent_size = 4

# TMPL-Files
[*.tmpl]
indent_style = tab
indent_size = 4

# SCSS-Files
[*.scss]
indent_style = space
indent_size = 4

# JavaScript
[*.js]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 4

# PHP-Files
[*.php]
indent_style = space
indent_size = 4

# ReST-Files
[*.rst]
indent_style = space
indent_size = 3

# Markdown
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# YAML-Files
[*.{yml,yaml,gitlabci.yml}]
indent_style = space
indent_size = 2

# package.json
# .travis.yml
# bower.json
[{package.json,.travis.yml,bower.json}]
indent_style = space
indent_size = 2

# TypoScript
[{*.tsconfig,*.typoscript,ext_typoscript_setup.txt,constants.txt,setup.txt,ext_conf_template.txt}]
indent_style = space
indent_size = 2

# XML, XLF
[*.{xml,xlf}]
indent_style = tab
indent_size = 4

# SQL-Files
[*.sql]
indent_style = tab
indent_size = 2

# Makefile
[{Makefile,**.mk}]
indent_style = tab
indent_size = 2

# phpstan config
[*.neon]
indent_style = tab
indent_size = 2
